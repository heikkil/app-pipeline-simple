<pipeline>
  <name>String Manipulation</name>
  <version>0.4</version>
  <description>Example of a pipeline
    Same as running:
       echo 'abcd' | tee /tmp/str | wc -c ; cat -n /tmp/str | wc -c
    but every stage is stored in a file
  </description>
  <step id="s1" name="echo">
    <arg key='in' value="abcd" type='unnamed'/>
    <arg key='out' value="s1.txt" type='redir'/>
    <next id="s2"/>
    <next id="s3"/>
  </step>
  <step id="s2" name="wc">
    <arg key='c' />
    <arg key='in' value="s1.txt" type='redir'/>
    <arg key='out' value="s2.count" type='redir'/>
  </step>
  <step id="s3" name="cat">
    <arg key='n' />
    <arg key='in' value="s1.txt" type='redir'/>
    <arg key='out' value="s3_mod.txt" type='redir'/>
    <next id="s4"/>
  </step>
  <step id="s4" name="wc">
    <arg key='c' />
    <arg key='in' value="s3_mod.txt" type='redir'/>
    <arg key='out' value="s4.count" type='redir'/>
  </step>
</pipeline>
